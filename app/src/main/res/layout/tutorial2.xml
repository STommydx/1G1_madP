<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#3e3e3e">

    <Button android:text="Back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/t2back" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
        android:onClick="backScreen" />
    <Button android:text="Next" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/t2next" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
        android:onClick="nextScreen" />
    <ImageButton android:layout_width="23dp" android:layout_height="24dp" app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/imageButton2" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:onClick="startGame"
        android:background="@android:color/transparent" />
    <TextView android:text="3.Touch the screen 1 times to switch the bullets" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" android:textColor="@android:color/background_light" />
    <ImageView android:layout_width="581dp" android:layout_height="485dp" app:srcCompat="@drawable/t3"
        android:id="@+id/t3" app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497" />
    <TextView android:text="Touch left or right side of the screen\nto switch among three types of bullet"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView16" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.503" android:textColor="@android:color/background_light"
        android:textSize="12sp" android:textAlignment="center" android:layout_marginTop="16dp" />
</android.support.constraint.ConstraintLayout>