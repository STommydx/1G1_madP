<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/uiLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorBackground"
                                             tools:context=".GameActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/gameLayout" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.constraint.ConstraintLayout>
    <TextView android:text="@string/stage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp" />

    <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_settings_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/pauseButton"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:alpha="0.4" android:id="@+id/switchLayout"
        android:padding="8dp" android:background="@color/switchBackground">
        <Button android:text="@string/chinese_text" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/chineseButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pauseButton"
            android:onClick="setChinese" android:layout_marginBottom="8dp" />
        <Button android:text="@string/text_english" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/englishButton" app:layout_constraintTop_toBottomOf="@+id/chineseButton"
            app:layout_constraintEnd_toEndOf="parent" android:textAllCaps="false" android:onClick="setEnglish"
            android:layout_marginBottom="8dp" />
        <Button android:text="@string/text_math" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/mathsButton" app:layout_constraintTop_toBottomOf="@+id/englishButton"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="setMaths" />
    </LinearLayout>
    <include
        android:id="@+id/includedLayout"
        layout="@layout/bottom_sheet"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>